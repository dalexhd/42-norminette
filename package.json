{
	"name": "42-norminette",
	"private": true,
	"description": "This extension will inject norm errors inside your code. NormV2 friendly!",
	"author": "aborboll (aborboll@student.42.fr)",
	"license": "MIT",
	"version": "5.2.1",
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/dalexhd/42-norminette"
	},
	"workspaces": [
		"packages/*"
	],
	"publisher": "dalexhd",
	"categories": [],
	"keywords": [
		"multi-root ready",
		"lerna multirepo",
		"from-package"
	],
	"engines": {
		"vscode": "^1.52.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./packages/client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Configuration",
			"properties": {
				"42norminette.command": {
					"scope": "resource",
					"type": "string",
					"default": "norminette",
					"description": "Norminette command or path."
				},
				"42norminette.showErrors": {
					"scope": "resource",
					"type": "string",
					"default": "all",
					"enum": [
						"all",
						"one"
					],
					"description": "Control how many errors will be displayed",
					"markdownEnumDescriptions": [
						"I'm motivated! Let's play with norminette ðŸ˜º",
						"Don't stress me! It's my â˜•/Cantina time"
					]
				},
				"42norminette.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"markdownEnumDescriptions": [
						"Don't show any error output",
						"Only show extesnsion messages",
						"I's time to fix this extension..."
					],
					"default": "messages",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "norminette",
					"title": "Norm Explorer",
					"icon": "media/icon.svg"
				}
			]
		},
		"views": {
			"norminette": [
				{
					"id": "norminetteErrorsView",
					"name": "View Errors",
					"icon": "media/icon.svg"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc --build tsconfig.json",
		"watch": "tsc -b -w",
		"scrape": "yarn --cwd ./packages/scrapper start",
		"deploy": "vsce publish --yarn"
	},
	"devDependencies": {
		"@types/mocha": "^8.0.3",
		"@types/node": "^12.12.0",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0",
		"lerna": "^3.22.1",
		"mocha": "^8.1.1",
		"typescript": "^4.0.2"
	},
	"extensionPack": [
		"usernamehw.errorlens"
	]
}
